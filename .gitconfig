[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	sb = status -b
	cp = cherry-pick
	l5 = log --oneline -5
	ll = log --oneline
	dc = diff --cached
	unstage = reset HEAD --
	visual = !gitk
	pr = pull-request
	see = browse

[user]
	name = Yusuke Hosonuma
	email = tobi462@gmail.com
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[push]
	default = simple
[core]
	excludesfile = $HOME/.gitignore
[ghq]
    root = $HOME/go/src
[rebase]
	autosquash = true
